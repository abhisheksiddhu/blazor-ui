@typeparam TEntity
@typeparam TColumnDefinition
@typeparam TTableDataFilters
@inherits BaseComponent

@if (Data == null)
{
    @if (LoadingContent is null)
    {
        <h2>Loading</h2>
    }
    else
    {
        @LoadingContent
    }
}
else
{
    <table class="@CssClass">
        <thead>
            <tr>
                @if (HeadContent is null)
                {
                    @foreach (var columnDefinition in ColumnDefinitions)
                    {
                        <th>@columnDefinition.Label</th>
                    }
                }
                else
                {
                    @HeadContent
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var rowData in Data)
            {
                @Body(rowData)
            }
        </tbody>
    </table>
}
