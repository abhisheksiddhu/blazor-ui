@typeparam TEntity
@typeparam TFormDefinition
@namespace Arinsys.Components.AspNetCore

@if (Data == null)
{
    @if (LoadingContent is null)
    {
        <h2>Loading</h2>
    }
    else
    {
        @LoadingContent
    }
}
else
{
    <EditForm Model="Data" OnValidSubmit="(context) => OnValidSubmit(context, Data)" OnInvalidSubmit="(context) => OnInvalidSubmit?.Invoke(context, Data)" class="@CssClass">
        <DataAnnotationsValidator />

        @ChildContent(Data)
    </EditForm>
}