@page "/tables"
@using Arinsys.Components.AspNetCore.Samples.Models
@using Arinsys.Components.AspNetCore.Samples.Fakes

<BUIBTable DataAccessor="GetData" TEntity="User" TTableDataFilters="BUIBTableDataFilters<User>">
    <Head>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </Head>
    <Body>
        <tr>
            <td>@context.Id</td>
            <td>@context.Name</td>
            <td>@context.Email</td>
        </tr>
    </Body>
</BUIBTable>

@code{
    protected Task<IEnumerable<User>> GetData(BUIBTableDataFilters<User> tableDataFilters)
    {
        IEnumerable<User> users = FakeUser.ValidDefaults.Generate(10);
        return Task.FromResult(users);
    }
}